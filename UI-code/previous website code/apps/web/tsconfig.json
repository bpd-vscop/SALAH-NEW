{
    "extends":  "../../tsconfig.json",
    "compilerOptions":  {
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ],
                                          "@automotive/ui":  [
                                                                 "../../packages/ui"
                                                             ],
                                          "@automotive/auth":  [
                                                                   "packages/auth/src"
                                                               ],
                                          "@automotive/config":  [
                                                                     "../../packages/config/src"
                                                                 ],
                                          "@automotive/database":  [
                                                                       "packages/database/src"
                                                                   ],
                                          "@automotive/types":  [
                                                                    "packages/types/src"
                                                                ]
                                      }
                        },
    "include":  [
                    "next-env.d.ts",
                    "**/*.ts",
                    "**/*.tsx",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules"
                ]
}
