PORT=5000

# MongoDB Configuration (Local Server)
# MONGODB_URI= # Not used - using individual config below
MONGO_HOST=127.0.0.1
MONGO_PORT=27017
MONGO_DB=salah_store
# MONGO_USER= # Only needed if MongoDB requires authentication
# MONGO_PASSWORD= # Only needed if MongoDB requires authentication

# JWT Authentication (IMPORTANT: Generate a secure key for production!)
# Generate new key: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-to-a-secure-random-string-in-production
AUTH_TOKEN_TTL_SECONDS=21600
AUTH_COOKIE_NAME=auth_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# CORS & Security
CLIENT_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# File Uploads
UPLOAD_MAX_MB=10
PROFILE_UPLOAD_MAX_MB=5

# Email / SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=bpd.claude@gmail.com
SMTP_PASSWORD=
SMTP_FROM="ULK Supply <bpd.claude@gmail.com>"

# Email Verification Settings
VERIFICATION_CODE_TTL_MINUTES=15
VERIFICATION_MAX_ATTEMPTS=5
VERIFICATION_LOCK_MINUTES=15
UNVERIFIED_ACCOUNT_EXPIRY_DAYS=15

# Password Reset Settings
PASSWORD_RESET_TTL_MINUTES=30
DEFAULT_ADMIN_NAME=Store Administrator
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# Bootstrap flags (disabled by default)
SEED_DEFAULT_ADMIN=false
ENABLE_ROLE_MIGRATION=false
